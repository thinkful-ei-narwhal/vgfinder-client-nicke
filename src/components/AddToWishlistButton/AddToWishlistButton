
import './AddToWishlistButton.css'
import Button from './../Utils/Utils'
import React, { Component } from 'react'

export default class AddToWishlistButton extends Component {
  static defaultProps = {
    userWishlist: [],
    gameId: 0
  }

  //needs to know the user wishlist

  render() {
    return (
      <Button>
        {!this.props.userWishlist.find(game => game.id === this.props.gameId) ? "Add to Wishlist" : "Already Wishlisted!"}
      </Button>
    )
  }
}
